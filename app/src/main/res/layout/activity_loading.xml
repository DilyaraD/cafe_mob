<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#233000"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mint"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trattoria"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:gravity="center"
        android:padding="16dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:fontFamily="sans-serif"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:elevation="10dp">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:visibility="invisible" />


        <Button
            android:id="@+id/menu_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:backgroundTint="@color/white"
            android:onClick="perehod_na_menu"
            android:text="МЕНЮ"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/onas_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:backgroundTint="@color/white"
            android:onClick="perehod_na_onas"
            android:text="О НАС"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:visibility="invisible" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:backgroundTint="@color/white"
            android:onClick="perehod_na_contact"
            android:text="КОНТАКТЫ"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:visibility="invisible" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:backgroundTint="@color/white"
            android:onClick="perehod_na_rezerv"
            android:text="РЕЗЕРВИРОВАНИЕ"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:visibility="invisible" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:backgroundTint="@color/white"
            android:onClick="launchAbout"
            android:text="РЕСТОРАН НА КАРТЕ"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:visibility="invisible" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:backgroundTint="@color/white"
            android:onClick="perehod_na_pop"
            android:text="ПОПУЛЯРНЫЕ БЛЮДА"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mint__1_"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>